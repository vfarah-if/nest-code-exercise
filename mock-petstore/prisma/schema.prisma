generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Method {
  GET
  PUT
  PATCH
  POST
  DELETE
}

model Mockendpoint {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  url            String
  method         Method  @default(GET)
  params         String?
  jsonResponse   String?
  raiseException Boolean @default(false)

  @@unique([url, params])
  @@map("mockendpoints")
}
